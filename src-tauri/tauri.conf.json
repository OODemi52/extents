{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Extents",
  "version": "0.1.0",
  "identifier": "com.extents.app",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "hiddenTitle": true,
        "title": "Extents",
        "transparent": true,
        "label": "main",
        "titleBarStyle": "Visible",
        "width": 1280,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: http://asset.localhost",
      "assetProtocol": {
        "enable": true,
        "scope": ["$CACHE/**", "$RESOURCE/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["mac-assets/Assets.car"],
    "macOS": {
      "bundleName": "Extents",
      "files": {
        "Info.plist": "mac-assets/Info.plist"
      }
    }
  }
}
